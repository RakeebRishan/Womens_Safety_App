<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/opening__1_"
        tools:ignore="InvalidId" />

    <!-- Content Overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:background="#80000000"> <!-- Semi-transparent overlay -->

        <!-- Register Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Full Name Input -->
        <EditText
            android:id="@+id/editText_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@null"
            android:padding="10dp"
            android:gravity="start" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/editText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@null"
            android:padding="10dp"
            android:gravity="start" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Mobile Number Input -->
        <EditText
            android:id="@+id/editText_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@null"
            android:padding="10dp"
            android:gravity="start" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@null"
            android:padding="10dp"
            android:gravity="start" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Emergency Contact Section -->

        <!-- Emergency Contact Name Input -->
        <EditText
            android:id="@+id/editText_emergency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Emergency Contact Name"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@null"
            android:padding="10dp"
            android:gravity="start" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Emergency Contact Mobile Number Input -->
        <EditText
            android:id="@+id/editText_emergency_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Emergency Contact Mobile"
            android:inputType="phone"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@null"
            android:padding="10dp"
            android:gravity="start" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Next Button -->
        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#001F54"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- ProgressBar (Initially hidden) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_centerInParent="true" />

</RelativeLayout>
